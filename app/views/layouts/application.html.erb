<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="fales" aria-label="Togglenavigarion">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
          <li>
              <%= link_to '/users', class: 'nav-link text-light' do %>
              <i class="fas fa-home" ::before></i>
              Home
              <% end %>
          </li>
          <li>
            <%= link_to '/users', class: 'nav-link text-light' do %>
            <i class="fas fa-users" ::before></i>
            Users
            <% end %>
          </li>
          <li>
            <%= link_to '/books', class: 'nav-link text-light' do %>
            <i class="fas fa-book-open" ::before></i>
            Books
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-light' do %>
            <i class="fas fa-sign-out-alt" ::before></i>
            Log out
            <% end %>
          </li>
          <% else %>
          <li>
              <%= link_to '/', class: 'nav-link text-light' do %>
              <i class="fas fa-home" ::before></i>
              Home
              <% end %>
          </li>
          <li>
            <%= link_to '/homes/about', class: 'nav-link text-light' do %>
            <i class="fas fa-link" ::before></i>
            About
            <% end %>
          </li>
          <li>
            <%= link_to new_user_registration_path, class: 'nav-link text-light' do %>
            <i class="fas fa-user-plus" ::before></i>
            Sign up
            <% end %>
          </li>
          <li>
            <%= link_to new_user_session_path, class: 'nav-link text-light' do %>
            <i class="fas fa-sign-in-alt" ::before></i>
            Log in
            <% end %>
          </li>
          <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>


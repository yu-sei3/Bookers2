<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/info', user: @user %>
        <%= render 'list', book: @book %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thed>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
              </tr>
          </thed>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
              <%= image_tag @user.get_profile_image("40x40") %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
            <tr></tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>



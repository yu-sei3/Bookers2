<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <%= render 'list', books:@books %>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thed>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
              </tr>
          </thed>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
              <% if @user.image.attached? %>
                <%= image_tag @user.image, size: "40x40" %>
              <% else %>
                <%= image_tag 'no_image', size: "40x40" %>
              <% end %>
              </td>
              <td><%= link_to book.title %></td>
              <td><%= book.body %></td>
            </tr>
            <tr></tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>



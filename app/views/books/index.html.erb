<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <% if @user.image.attached? %>
          <%= image_tag @user.image, size: "100x100" %>
        <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
        <% end %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
              <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
          </tbody>
        </table>
        <div class="row">
          <a class="btn btn-outline-secondary btn-block">編集</a>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: Book.new, local: true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <label for="book_body">Opinion</label>
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book' %>
        </div>
        <% end %>
        <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thed>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thed>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td></td>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
            </tr>
            <tr></tr>
            <% end %>
          </tbody>
        </table>
        </div>
      </div>
    </div>
  </div>
</main>



<main>
   <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render 'list', books:@books %>
          <% @books.each do |book| %>
          <tr>
            <td>
            <% if @user.image.attached? %>
              <%= image_tag @user.image, size: "40x40" %>
            <% else %>
              <%= image_tag 'no_image', size: "40x40" %>
            <% end %>
            </td>
            <td><%= link_to book.title %></td>
            <td><%= book.body %></td>
          </tr>
          <tr></tr>
            <% end %>
          </tbody>
        </table>
      </div>
     </div>
    </div>
</main>


